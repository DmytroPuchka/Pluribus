{
  "project": "Pluribus",
  "version": "0.1.0",
  "framework": "next.js",
  "description": "International delivery platform - Skills and Agents configuration",

  "skills": {
    "ui": [
      "create-component",
      "create-page",
      "integrate-pagination",
      "add-loading-error-states",
      "add-store"
    ],
    "api": [
      "create-api-route"
    ]
  },

  "note_on_agents": "Custom agents not created - using Task tool with general-purpose subagents is more effective for this project",

  "paths": {
    "components": "src/components",
    "pages": "src/app",
    "api": "src/app/api",
    "lib": "src/lib",
    "types": "src/types",
    "tests": "__tests__",
    "styles": "src/styles"
  },

  "conventions": {
    "componentStyle": "functional with FC type",
    "typeStyle": "interface",
    "clientComponents": "use 'use client' directive when needed",
    "stylingMethod": "tailwind + shadcn/ui",
    "namingConvention": "PascalCase",
    "fileStructure": "component/index.tsx (no separate CSS files)",
    "imports": "use @ alias for src imports",
    "props": "always destructure props",
    "exports": "named export + default export",
    "comments": "JSDoc for component description"
  },

  "templates": {
    "component": ".claude/templates/component.template.tsx",
    "page": ".claude/templates/page.template.tsx",
    "loadingState": ".claude/templates/loading.template.tsx",
    "errorState": ".claude/templates/error.template.tsx",
    "store": ".claude/templates/store.template.ts",
    "apiRoute": ".claude/templates/api-route.template.ts"
  },

  "real_world_usage": {
    "primary_method": "Task tool with subagents for parallel development",
    "components_created": "36+ components via Write/Edit tools",
    "pages_created": "22 pages via Task tool + subagents",
    "skills_usage": "Skills serve as reference documentation, not directly invoked",
    "effectiveness": "Task tool + subagents proved more flexible and powerful than custom skills"
  }
}
